{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shop-project/microservices/catalog/migrations": [
        "libs/microservices/catalog/migrations/src/index.ts"
      ],
      "@shop-project/microservices/catalog/schema": [
        "libs/microservices/catalog/schema/src/index.ts"
      ],
      "@shop-project/microservices/catalog/types": [
        "libs/microservices/catalog/types/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
